<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".generalUser.TendActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tiendafondo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/bolsaBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="33dp"
            android:background="@drawable/bolsa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/returnBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/volver"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="345dp"
            android:layout_height="47dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="145dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="¿Qué deseas comprar hoy?"
            android:inputType="textPersonName"
            android:paddingLeft="50dp"
            android:textColor="#7E7979"
            android:textColorHint="#8F8A8A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginTop="192dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bebidaBtn"
                        style="@style/MainButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:background="#FFFFFF"
                        android:capitalize="words"
                        android:text="Bebidas"
                        android:textColor="#BDBDBD"
                        android:textColorHint="#FE811E" />

                    <Button
                        android:id="@+id/mecatoBtn"
                        style="@style/MainButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:capitalize="words"
                        android:text="Mecato"
                        android:textColor="#BDBDBD"
                        android:textColorHint="#FE811E" />

                    <Button
                        android:id="@+id/panBtn"
                        style="@style/MainButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:capitalize="words"
                        android:text="Panes"
                        android:textColor="#BDBDBD"
                        android:textColorHint="#FE811E" />

                    <Button
                        android:id="@+id/granoBtn"
                        style="@style/MainButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:capitalize="words"
                        android:text="Granos"
                        android:textColor="#BDBDBD"
                        android:textColorHint="#FE811E" />

                    <Button
                        android:id="@+id/fyvBtn"
                        style="@style/MainButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:capitalize="words"
                        android:text="Frutas y verduras"
                        android:textColor="#BDBDBD"
                        android:textColorHint="#FE811E" />

                    <Button
                        android:id="@+id/aseoBtn"
                        style="@style/MainButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:capitalize="words"
                        android:text="Aseo e higiene"
                        android:textColor="#BDBDBD"
                        android:textColorHint="#FE811E" />

                </LinearLayout>
            </HorizontalScrollView>
        </ScrollView>



        <TextView
            android:id="@+id/indexTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="48dp"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productViewList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="270dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>